<script>
    let isLoading = false;
    var currentPage = 0;
    function loadMoreProduct(id, pageIndex) {
        isLoading = true;
        $.getJSON("/api/product/type?id="+ id + "&page=" + pageIndex, function (data) {
            var source = $("#product-template").html();
            var template = Handlebars.compile(source);
            let productHtml = "";
            data.items.forEach(function (product) {
                productHtml += template(product);
            });
            $("#listProduct_loadMore").append(productHtml);
            isLoading = false;
        });
    }

    $(document).ready(function () {
        var url = window.location.pathname;
        var id = url.substring(url.lastIndexOf('/') + 1);
        //load dau tien
        loadMoreProduct(id, ++currentPage);

        var win = $(window);
        // Each time the user scrolls
        win.scroll(function () {
            // End of the document reached?
            if ($(document).height() - win.height() == win.scrollTop() && !isLoading) {
                loadMoreProduct(id, ++currentPage);
            }
        });
    });
</script>

